programa {
  funcao inicio() {
    inteiro num1, num2, subtracao, soma

    escreva("Digite o primeiro número: ")
    leia(num1)

    escreva("Digite o segundo número: ")
    leia(num2)

    subtracao = num1 - num2

    escreva(num1, " - ", num2, " = ", subtracao)
 
    soma = num1 + num2

    escreva(num1, " + ", num2, " = ", soma)
  }
}
